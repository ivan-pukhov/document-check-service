{
  "policies" : [
    {
      "name": "message-ttl-policy",
      "vhost": "document-check-host",
      "pattern": "dead-letter-queue",
      "apply-to": "queues",
      "definition": {
        "message-ttl": 30000
      }
    }
  ],
  "queues": [
    {
      "name": "input-queue",
      "vhost": "document-check-host",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-queue-type": "quorum",
        "x-dead-letter-exchange": "dead-letter-exchange"
      }
    },
    {
      "name": "dead-letter-queue",
      "vhost": "document-check-host",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-message-ttl": 60000,
        "x-dead-letter-exchange": "input-exchange"
      }
    }
  ],
  "exchanges": [
    {
      "name": "input-exchange",
      "vhost": "document-check-host",
      "type": "direct",
      "durable": true,
      "auto_delete": false,
      "internal": false,
      "arguments": {}
    },
    {
      "name": "dead-letter-exchange",
      "vhost": "document-check-host",
      "type": "direct",
      "durable": true,
      "auto_delete": false,
      "internal": false,
      "arguments": {}
    }
  ],
  "bindings": [
    {
      "source": "input-exchange",
      "vhost": "document-check-host",
      "destination": "input-queue",
      "routing_key": "",
      "destination_type": "queue",
      "arguments": {}
    },
    {
      "source": "dead-letter-exchange",
      "vhost": "document-check-host",
      "destination": "dead-letter-queue",
      "routing_key": "",
      "destination_type": "queue",
      "arguments": {}
    }
  ]
}